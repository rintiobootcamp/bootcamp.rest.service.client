<?xml version="1.0" encoding="UTF-8"?>
<configuration status="warn" packages="org.apache.logging.log4j.core,io.sentry.log4j2">
    <Properties>
        <Property name="LOG_PATTERN">%highlight{%d{yyyy-MM-dd HH:mm:ss.SSS zzz} [%t] %-5level: %msg%n%throwable}{FATAL=white, ERROR=red, WARN=yellow, INFO=green, DEBUG=green, TRACE=green}</Property>
    </Properties>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
    </appenders>

    <loggers>
        <root level="DEBUG" includeLocation="false"> <!--https://logging.apache.org/log4j/2.x/manual/async.html#Location -->
            <appender-ref ref="Console"/>
        </root>
    </loggers>
</configuration>